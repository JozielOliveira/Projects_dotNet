@model Consumer.Domain.Entities.Electric

<div class="form-horizontal">
    
    <form action="Edit" method="Post">
        <input class="form-control d-none" type="number" name="id" asp-for="id"/>

        <div class="form-group">
            <label>ID</label>
            <input disabled class="form-control" type="number" name="id" asp-for="id"/>
        </div>
        <div class="form-group">
            <label>Data de leitura</label>
            <input  class="form-control" type="date" asp-for="readDate" name="readDate"/>
        </div>
        <div class="form-group">
            <label>Num. leitura</label>
            <input  class="form-control" type="number" asp-for="readNum" name="readNum"/>
        </div>
        <div class="form-group">
            <label>Kw Gasto</label>
            <input  class="form-control" type="number" asp-for="kwConsumed" name="kwConsumed"/>
        </div>
        <div class="form-group">
            <label>Valor a pagar</label>
            <input  class="form-control" type="number" asp-for="value" name="value"/>
        </div>
        <div class="form-group">
            <label>Data de pagamento</label>
            <input  class="form-control" type="date" asp-for="datePag" name="datePag"/>
        </div>
        <div class="form-group">
            <label>Média de consumo</label>
            <input  class="form-control" type="number" asp-for="mediaConsumed" name="mediaConsumed"/>
        </div>
        <div class="form-group">
            <label>Residência</label>
            <select  class="form-control" name="residence.id">
                <option value="" disabled selected > Selecione a Residência </option>
                @foreach(var item in ViewBag.residences)
                {
                    <!option value="@item.id" selected={item.id == Model.recidence.id} > @item.nameOwner </!option>                
                }
            </select>
        </div>
        <input  class="btn btn-primary" type="submit" value="Salvar"/>
    </form>
</div>